<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    
    <!-- FancyBox CSS CDN  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- jQuery  -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

    <title><%=title%></title>
  </head>

  <body>

    <div class="ajaxbg">
      <div class="ajaxinner">
        <h3>You are now being redirected to PayPal...</h3>
        <img src="/images/ajax-loader.gif" alt="">
      </div>
    </div>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <div class="navbar-header">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h2><a class="navbar-brand" href="/">CmsShoppingCart</a></h2>
        </div>
        <div id="navbarCollapse" class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <% pages.forEach( (page) => {%>
              <% if (page.slug == "home") {%>
              <li class="nav-item"><a class="nav-link" href="/"><%= page.title %></a></li>
              <% } else {%>
              <li class="nav-item"><a class="nav-link" href="<%= page.slug %>"><%= page.title %></a></li>
              <% } %>
            <% }); %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
              <a class="nav-link" href="/cart/checkout">My Cart(
                <% if (typeof cart !== "undefined") {%>
                  <%= cart.length %>
                <% } else { %>
                  0
                <% } %>
              )</a>
            </li>
            <li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>
            <li class="nav-item"><a class="nav-link" href="/users/login">Log In</a></li>
          </ul>
        </div>
        <!-- <div class="text-right">
          <a class="nav-link" href="/admin/pages/">Admin</a>
        </div> -->
      </div>
    </nav>

    <div class="container">
      <%- messages('messages', locals) %>

      <% if(errors) { %>
        <% errors.forEach( (error) => { %>
          <div class="alert alert-danger">
            <%= error.msg;  %>
          </div>
        <% }); %>
      <% } %>
      
      <div class="row">
        <div class="col-xs-12 col-md-3">
          <h3>Categories</h3>
          <ul class="list-grou">
            <li class="list-group-item"><a class="nav-link" href="/products">All products</a></li>
            <% categories.forEach( (c) => {%>
              <li class="list-group-item"><a class="nav-link" href="/products/<%= c.slug %>"><%= c.title %></a></li>
            <% }); %>
          </ul>
        </div>
        <div class="col-xs-12 col-md-1">

        </div>
        <div class="col-xs-12 col-md-8">

        





